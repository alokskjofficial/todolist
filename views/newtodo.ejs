<%- include("header") -%>

<section>
  <form method="post" action="/post">
    <div class="title-new text-2xl px-4 font-extrabold capitalize">
      <p>new task</p>
    </div>
    <div class="category-date flex justify-between">
      <div
        class="category flex justify-between items-center space-x-2 bg-gray-50 shadow-lg py-3 px-2 my-6 ml-5 rounded-lg"
      >
        <i class="fa-solid fa-filter text-lg px-1"></i>
        <div class="catogory-title-name px-2">
          <div class="catogory-title text-sm font-extralight">category</div>
          <div class="catogory-name font-bold">
            <input
              type="text"
              class="w-20 outline-none bg-transparent lowercase"
              placeholder="Type"
              name="catogory"
            />
          </div>
        </div>
      </div>

      <div
        class="category flex justify-between items-center space-x-3 bg-gray-50 shadow-lg py-3 px-2 my-6 mr-5 rounded-lg"
      >
        <i class="fa-regular fa-calendar-days text-lg"></i>
        <div class="catogory-title-name px-3">
          <div class="catogory-title text-sm font-extralight">Date</div>
          <div class="catogory-name font-bold">
            <input
              class="outline-none w-24 text-xs bg-transparent unstyled"
              placeholder="Select"
              class="textbox-n"
              type="date"
              pattern="\d{1,2}/\d{1,2}/\d{4}"
              name="date"
            />
          </div>
        </div>
      </div>
    </div>

    <div class="block p-3 mx-4 rounded-lg shadow-lg bg-gray-50 max-w-sm">
      <div class="form-group mb-6 py-3">
        <input
          type="text"
          class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
          id="exampleInput90"
          placeholder="Title"
          name="newTodoTitle"
          required="true"
        />
      </div>
      <div class="form-group mb-6 py-3">
        <input
          type="text"
          class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
          id="exampleInput91"
          placeholder="Description"
          name="newTodoDescription"
        />
      </div>

      <button
        type="submit"
        class="w-full px-3 py-2.5 my-3 bg-blue-700 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"
      >
        Add
      </button>
    </div>
  </form>
</section>

<%- include("footer") -%>
